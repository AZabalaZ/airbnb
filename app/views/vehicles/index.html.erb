<h1>Catalogo</h1>
<div class="head-vehicles">
  <h2>Nuestros vehiculos</h2>
  <%=link_to 'New Vehicle', new_vehicle_path, class: "btn btn-primary", style: "margin-bottom: auto" %>
</div>

<div class="container-1">
  <% @vehicles.each do |vehicle| %>
    <div class="card-vehicle">
      <h2><%= vehicle.brand %></h2>
      <p>Modelo: <%= vehicle.model %></p>
      <p>Año: <%= vehicle.year %></p>
      <p>Dueño: <%= vehicle.name %></p>
      <p>Ubicación: <%= vehicle.ubication %></p>

      <%= link_to 'Ver', vehicle, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
